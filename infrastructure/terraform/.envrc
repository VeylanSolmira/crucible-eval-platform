# AWS Profile for this project
export AWS_VAULT_PROFILE="AdministratorAccess-503132503803"

# Functions for running OpenTofu with aws-vault (zsh-compatible)
tf() {
    aws-vault exec $AWS_VAULT_PROFILE -- tofu "$@"
}

tfp() {
    aws-vault exec $AWS_VAULT_PROFILE -- tofu plan
}

tfa() {
    aws-vault exec $AWS_VAULT_PROFILE -- tofu apply
}

echo "✓ AWS Vault profile: $AWS_VAULT_PROFILE"
echo "✓ Plugin timeout: 300s"
echo ""
echo "Run commands with:"
echo "  aws-vault exec \$AWS_VAULT_PROFILE -- tofu <command>"