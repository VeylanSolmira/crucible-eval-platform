{
  "name": "crucible-frontend",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "security-check": "npm audit --audit-level=moderate",
    "check-deps": "npm-check-updates",
    "prepare": "cd .. && husky install frontend/.husky",
    "pre-commit": "npm run type-check && npm run lint && npm run security-check",
    "generate-types": "openapi-typescript http://localhost:8080/openapi.json -o ./types/generated/api.ts",
    "generate-types:docker": "openapi-typescript http://crucible-platform:8080/openapi.json -o ./types/generated/api.ts"
  },
  "dependencies": {
    "next": "14.2.30",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.30",
    "husky": "^8.0.0",
    "npm-check-updates": "^16.14.0",
    "openapi-typescript": "7.8.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.2.2"
  }
}
