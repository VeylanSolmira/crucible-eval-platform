{
  "name": "crucible-frontend",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "npm run generate-types && next build",
    "build:local": "npm run generate-types && next build",
    "build:full": "cd .. && ./scripts/generate-all-openapi-specs.sh && cd frontend && npm run build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "lint:all": "npm run lint && npm run type-check",
    "security-check": "npm audit --audit-level=moderate",
    "check-deps": "npm-check-updates",
    "prepare": "cd .. && husky install frontend/.husky",
    "pre-commit": "npm run type-check && npm run lint && npm run security-check",
    "generate-types": "node scripts/generate-types.js",
    "generate-types:unsafe": "openapi-typescript ../api/openapi.yaml -o ./types/generated/api.ts",
    "generate-types:docker": "node scripts/generate-types.js",
    "generate-shared-types": "NODE_PATH=./node_modules node ../shared/scripts/generate-typescript-types.js"
  },
  "dependencies": {
    "@monaco-editor/react": "4.7.0",
    "@tanstack/react-query": "5.81.5",
    "@tanstack/react-query-devtools": "5.81.5",
    "date-fns": "4.1.0",
    "glob": "^10.3.10",
    "gray-matter": "4.0.3",
    "mermaid": "^11.7.0",
    "monaco-editor": "0.52.2",
    "next": "^15.3.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-force-graph": "^1.44.3",
    "react-markdown": "9.1.0",
    "react-syntax-highlighter": "^15.5.0",
    "remark-gfm": "^4.0.0",
    "remark-wiki-link": "2.0.1",
    "reveal.js": "5.2.1"
  },
  "overrides": {
    "dompurify": "^3.2.4",
    "prismjs": "^1.30.0",
    "got": "^11.8.5"
  },
  "devDependencies": {
    "@types/js-yaml": "4.0.9",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/react-syntax-highlighter": "^15.5.11",
    "@types/reveal.js": "5.2.0",
    "@typescript-eslint/eslint-plugin": "8.35.0",
    "@typescript-eslint/parser": "8.35.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^9.29.0",
    "eslint-config-next": "^15.3.4",
    "husky": "^8.0.0",
    "js-yaml": "4.1.0",
    "npm-check-updates": "^16.14.0",
    "openapi-typescript": "7.8.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.2.2"
  }
}
