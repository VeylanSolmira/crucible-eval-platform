{
  "name": "crucible-frontend",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:local": "npm run generate-types && next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "security-check": "npm audit --audit-level=moderate",
    "check-deps": "npm-check-updates",
    "prepare": "cd .. && husky install frontend/.husky",
    "pre-commit": "npm run type-check && npm run lint && npm run security-check",
    "generate-types": "openapi-typescript ../api/openapi.yaml -o ./types/generated/api.ts",
    "generate-types:docker": "openapi-typescript ../api/openapi.yaml -o ./types/generated/api.ts"
  },
  "dependencies": {
    "@monaco-editor/react": "4.7.0",
    "@tanstack/react-query": "5.81.5",
    "@tanstack/react-query-devtools": "5.81.5",
    "gray-matter": "4.0.3",
    "monaco-editor": "0.52.2",
    "next": "^15.3.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "9.1.0",
    "reveal.js": "5.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/reveal.js": "5.2.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^9.29.0",
    "eslint-config-next": "^15.3.4",
    "husky": "^8.0.0",
    "npm-check-updates": "^16.14.0",
    "openapi-typescript": "7.8.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.2.2"
  }
}
