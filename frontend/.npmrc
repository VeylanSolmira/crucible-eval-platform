# Security settings for npm

# Fail on audit issues of moderate or higher
audit-level=moderate

# Don't run scripts on install (security risk)
ignore-scripts=true

# Only use the registry we trust
registry=https://registry.npmjs.org/

# Save exact versions (reproducible builds)
save-exact=true

# Don't save optional dependencies
save-optional=false

# Engine strict mode (enforce Node version)
engine-strict=true